generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  name     String  
  email    String  @unique
  password String
  tasks    Task[]  @relation("AssigneeTasks")
}
model Task {
  id          Int      @id @default(autoincrement())
  description String
  priority    String
  status      String
  date        DateTime
  assigneeId  Int
  assignee    User     @relation("AssigneeTasks", fields: [assigneeId], references: [id])
}
